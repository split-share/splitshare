# Local Development Environment
# Copy this file to .env for local development with Docker
# Run: cp .env.local.example .env

# Database (Docker PostgreSQL)
DATABASE_URL=postgresql://splitshare:splitshare_dev_password@localhost:5432/splitshare

# Better Auth
BETTER_AUTH_SECRET=local-dev-secret-key-change-in-production-min-32-chars
BETTER_AUTH_URL=http://localhost:5173
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5173

# Email (Mailpit for local testing)
# SMTP server: localhost:1025
# Web UI: http://localhost:8025
RESEND_API_KEY=not-needed-for-local-dev
EMAIL_FROM=noreply@splitshare.local

# Error Monitoring (Sentry - optional for local dev)
# Leave empty to disable Sentry in development
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Rate Limiting (Docker Redis via Upstash HTTP Proxy)
# Uses upstash-proxy service for Upstash SDK compatibility
UPSTASH_REDIS_REST_URL=http://localhost:8079
UPSTASH_REDIS_REST_TOKEN=example_token

# Application
PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development

# Docker Compose Service Credentials (used by docker-compose.yml)
POSTGRES_USER=splitshare
POSTGRES_PASSWORD=splitshare_dev_password
POSTGRES_DB=splitshare
REDIS_PASSWORD=redis_dev_password
