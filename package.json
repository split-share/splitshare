{
	"name": "splitshare",
	"private": true,
	"version": "1.0.3",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:unit": "vitest run",
		"test:integration": "playwright test",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"build:mobile": "MOBILE_BUILD=true npm run build",
		"cap:sync": "npm run build:mobile && npx cap sync",
		"cap:android": "npm run cap:sync && npx cap open android",
		"cap:ios": "npm run cap:sync && npx cap open ios",
		"mobile:build:android:debug": "npm run cap:sync && cd android && ./gradlew assembleDebug",
		"mobile:build:android:release": "npm run cap:sync && cd android && ./gradlew assembleRelease",
		"mobile:build:android:bundle": "npm run cap:sync && cd android && ./gradlew bundleRelease",
		"mobile:build:ios:debug": "npm run cap:sync && cd ios/App && xcodebuild -scheme App -configuration Debug -sdk iphoneos -destination generic/platform=iOS build",
		"mobile:build:ios:release": "npm run cap:sync && cd ios/App && xcodebuild -scheme App -configuration Release -sdk iphoneos -destination generic/platform=iOS build"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/pino-pretty": "^4.7.5",
		"@types/qrcode": "^1.5.6",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitest/ui": "^4.0.10",
		"autoprefixer": "^10.4.22",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"happy-dom": "^20.0.10",
		"jsdom": "^27.2.0",
		"layerchart": "^2.0.0-next.43",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.47.1",
		"svelte-check": "^4.3.3",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.17",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.1.10",
